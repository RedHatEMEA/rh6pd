<script>
 function loadModel()
 {
   var BMW=new Array("3 Series","5 Series");
   var FORD=new Array("Fiesta","Escort","Mondeo");
   var HONDA=new Array("Civic","Accord","CRV");

   var selectedBoxValue=document.form.Make.value;
   var i;
   var j;

   var ModelLength=eval(selectedBoxValue).length;

   removeSelectboxOption();

   for(i=0;i<document.form.Make.options.length;i++)
   {
    if(selectedBoxValue==document.form.Make.options[i].value)
    {
      for(j=0;j<ModelLength;j++)
      {
        document.form.Model.options[j]=new Option(eval(selectedBoxValue)[j],eval(selectedBoxValue)[j])
      }
    }
   }
}

function removeSelectboxOption()
{
   var i;
   for(i=0;i<document.form.Model.options.length;i++)
   {
    document.form.Model.remove(i);
   }
}
</script>


<script type='text/javascript'>
	function notEmpty(elem){
		if(elem.value.length == 0){
			return false;
		}
		return true;
	}
	
	function isNumeric(elem){
		var numericExpression = /^[0-9]+$/;
		if(elem.value.match(numericExpression)){
			return true;
		} else {
			return false;
		}
	}
	
	function isAlphabet(elem){
		var alphaExp = /^[a-zA-Z0-9\_ .-@]+$/;
		if(elem.value.match(alphaExp)){
			return true;
		} else {
			return false;
		}
	}
	
	function isAlphanumeric(elem){
		var alphaExp = /^[a-zA-Z0-9\_ .-@]+$/;
		if(elem.value.match(alphaExp)){
			return true;
		} else {
			return false;
		}
	}
	
	function isFloat(elem){
   		if(elem.value.indexOf(".") < 0){
     		return false;
   		} else {
      		if(parseFloat(elem.value)) {
              return true;
          	} else {
              return false;
          	}
   		}
	}
	
	function taskFormValidator() {
		var i=0;
		var myInputs = new Array();

					myInputs[i] = document.getElementById("Model");
					i++;
				
					myInputs[i] = document.getElementById("Reg");
					i++;
				
					myInputs[i] = document.getElementById("Make");
					i++;
				
		
		var j=0;

						if(notEmpty(myInputs[j]) && !isAlphanumeric(myInputs[j])) {
							alert("Please enter valid Model");
							myInputs[j].focus();
							return false;
						}	
					j++;
				
						if(notEmpty(myInputs[j]) && !isAlphanumeric(myInputs[j])) {
							alert("Please enter valid Reg");
							myInputs[j].focus();
							return false;
						}	
					j++;
				
						if(notEmpty(myInputs[j]) && !isAlphanumeric(myInputs[j])) {
							alert("Please enter valid Make");
							myInputs[j].focus();
							return false;
						}	
					j++;
				
		return true;
	}
</script>
